{{render "header" this.model}}
<div id="tableWrapper" class="g_noSelect">
	{{#each table in model.relatedTables}}	
		<div class="tableContainer Users Files Teams UserPermissions">
			<div class="tableTitle">
				<div class="titleDeco"></div>
				<span class="inner g_txtToUpper">{{table.name}}</span>
			</div>
			<table class="defaultTable">
				<thead class="tableHead">
					<tr class="tableRowHeader">
						<th class="tableHeadCol">
							<input type="checkbox" />
						</th>
						<th class="tableHeadCol">
							<div class="text">
								<span>Id</span>
							</div>
							<div class="iconContainer">
								<span class="arrowSort"></span>
							</div>
						</th>
						<th class="tableHeadCol">
							<div class="text">
								<span>Username</span>
							</div>
							<div class="iconContainer">
								<span class="arrowSort"></span>
							</div>
						</th>
						<th class="tableHeadCol">
							<div class="text">
								<span>Password</span>
							</div>
							<div class="iconContainer">
								<span class="arrowSort up"></span>
							</div>
						</th>
					</tr>
				</thead>
				<tbody class="tableBody">
					<tr class="tableRow even" data-row="users-1">
						<td class="tableCol">
							<input type="checkbox" data-filter="users-1"/>
						</td>
						<td class="tableCol">
							<span class="tableData">1</span>
						</td>
						<td class="tableCol">
							<span class="tableData">Yngve</span>
						</td>
						<td class="tableCol">
							<span class="tableData">kalasklister</span>
						</td>
					</tr>									
					<tr class="tableRow odd" data-row="users-2">
						<td class="tableCol">
							<input type="checkbox" data-filter="users-2"/>
						</td>
						<td class="tableCol">
							<span class="tableData">2</span>
						</td>
						<td class="tableCol">
							<span class="tableData">Angelica</span>
						</td>
						<td class="tableCol">
							<span class="tableData">kusinvitamin</span>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	{{/each}}
</div>
